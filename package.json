{
  "name": "lottery-verification",
  "version": "1.0.0",
  "description": "DOKDODAO lottery verification system",
  "author": "SELVEDGE LAB PTE. LTD. (DOKDODAO) <dokdo@dokdodao.io>",
  "license": "SEE LICENSE IN LICENSE.md",
  "type": "module",
  "main": "src/main.ts",
  "bin": {
    "lottery-verification": "./src/main.ts"
  },
  "scripts": {
    "prebuild": "bun scripts/generate-version.ts",
    "build": "bun build src/main.ts --compile --outfile=lottery-verification",
    "build:windows": "bun build src/main.ts --compile --target=bun-windows-x64 --outfile=lottery-verification.exe",
    "build:linux": "bun build src/main.ts --compile --target=bun-linux-x64 --outfile=lottery-verification",
    "build:linux-arm": "bun build src/main.ts --compile --target=bun-linux-arm64 --outfile=lottery-verification",
    "build:macos": "bun build src/main.ts --compile --target=bun-darwin-x64 --outfile=lottery-verification",
    "build:macos-arm": "bun build src/main.ts --compile --target=bun-darwin-arm64 --outfile=lottery-verification",
    "dev": "bun --watch src/main.ts",
    "start": "bun src/main.ts",
    "test": "bun test",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "axios": "^1.13.4",
    "commander": "^14.0.3",
    "ethers": "^6.16.0",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.9.3"
  }
}
